@model IEnumerable<NotebookWebApp.Models.Processor>

@{
    ViewBag.Title = "Процессоры";
}

<h2>Процессоры</h2>
<hr />
<table style="border-spacing: 7px; border-collapse: separate; width: 100%;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Frequency)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Socket)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cores)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Frequency)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Socket)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cores)
        </td>
        <td>
            <button type="button"onclick="location.href='@Url.Action("Edit", "Processor", new { id=item.ProcessorID })'">Редактировать</button>
            <button type="button"onclick="location.href='@Url.Action("Delete", "Processor", new { id=item.ProcessorID })'">Удалить</button>
        </td>
    </tr>
}

</table>
<hr />
<p>
    <button type="button" onclick="location.href='@Url.Action("Create", "Processor")'">Добавить</button>
</p>