@model NotebookWebApp.Models.Processor

@{
    ViewBag.Title = "Процессоры";
}

<h2>Изменить информацию про процессор</h2>
<hr />
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Processor</legend>

        @Html.HiddenFor(model => model.ProcessorID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Model)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Model)
            @Html.ValidationMessageFor(model => model.Model)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Frequency)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Frequency)
            @Html.ValidationMessageFor(model => model.Frequency)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Socket)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Socket)
            @Html.ValidationMessageFor(model => model.Socket)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Cores)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Cores)
            @Html.ValidationMessageFor(model => model.Cores)
        </div>

        <p>
            <button type="button" onclick="location.href='@Url.Action("Index", "Manufacturer")'">Отменить</button>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
